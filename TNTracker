<trackerinfo
	type="tn"
	shortName="TN"
	longName="TNetwork"
	siteName="tntracker.org">

	<settings>
		<description text="Go to https://tntracker.org/getrss.php to get the RSS feed link. Paste it (Ctrl+V) into the text box below to automatically extract passkey."/>
		<passkey tooltiptext="The passkey in your TNetwork RSS feed link."/>
	</settings>

	<servers>
		<server
			network="TNetwork"
			serverNames="209.148.85.10"
			channelNames="#announce"
			announcerNames="|TN|"
			/>
	</servers>

	<parseinfo>
		<multilinepatterns>
			<!--{New Torrent} Name {Doctor.Who.2005.S02E09.1080p.BluRay.x264-SHORTBREHD} Typ {Serien|Inter} Pre {2 m 34 s}-->
			<!--{New Torrent} Size {4.044GB} Files {93} Link {https://tntracker.org/details.php?id=297184&hit=1}-->
			<extract>
				<regex value="^\{New\sTorrent\}\sName\s\{(.*)\}\sTyp\s\{([|a-zA-Z0-9]*)\}(?:\sPre\s\{(.*)\})?$"/>
				<vars>
					<var name="torrentName"/>
					<var name="category"/>
					<var name="preTime"/>
				</vars>
			</extract>
			<extract>
				<regex value="^\{New\sTorrent\}\sSize\s\{(.*)\}\sFiles\s\{.*\}\sLink\s\{https?\:\/\/([^\/]+\/).*[&amp;\?]id=(\d+)"/>
				<vars>
					<var name="torrentSize"/>
					<var name="$baseUrl"/>
					<var name="$torrentId"/>
				</vars>
			</extract>
		</multilinepatterns>
		<linematched>
			<var name="torrentUrl">
				<string value="https://"/>
				<var name="$baseUrl"/>
				<string value="download.php?torrent="/>
				<var name="$torrentId"/>
				<string value="&amp;passkey="/>
				<varenc name="passkey"/>
			</var>
		</linematched>
		<ignore>
		</ignore>
	</parseinfo>
</trackerinfo>
